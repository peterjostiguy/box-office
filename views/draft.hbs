<h1>draft</h1>
<div id="the-whole-damn-page">
  <div id="current-movie">
    <p>Current Bid:</p>
    <div class="draft-movie" id="current-movie-bid">
      <div class="draft-release-date">
        <h4>Release Date:</h4>
        <p id ='current-release-date'></p>
      </div>
      <h4 id='current-title'></h4>
      <h4 id='current-bid'></h4>
      <h4 id='current-bidder'></h4>
    </div>
    <!-- <p id='countdown-timer'></p> -->
    <button type="button" name="button" class='bid-button' id='1'>+1</button>
    <button type="button" name="button" class='bid-button' id='5'>+5</button>
    <button type="button" name="button" id="end-bid-button">End Bidding</button>

  </div>

  <div class="all-movies">
    {{#each movies}}
      <div class="draft-movie">
        <div class="draft-release-date">
          <h4>Release Date:</h4>
          <p>{{releaseDate}}</p>
        </div>
        <h4>{{title}}</h4>
      </div>
    {{/each}}
  </div>
</div>

<h1 id='waiting-message'>Draft starting soon</h1>
<button type="button" name="button" id='start-button'>Start Draft</button>
